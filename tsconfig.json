{
  "compilerOptions": {
    "module": "Preserve",
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "target": "ES2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["vitest/globals"]
  },
  "include": ["**/*"]
}
